datasource Datasource {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator Client {
  provider = "prisma-client-js"
  output   = "./.gen/prisma"
}

generator GraphQL {
  provider = "nexus-prisma"
}

model User {
  id            String   @id
  username      String
  discriminator String
  avatar        String
  accentColor   Int?
  servers       Server[]
}

model Server {
  id      String @id
  channel String
  members User[]
}

model Session {
  id      String    @id
  data    Json
  expires DateTime?
}
